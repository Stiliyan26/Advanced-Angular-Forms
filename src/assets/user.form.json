{
  "description": "The new user form config",
  "controls": {
    "fullName": {
      "controlType": "input",
      "type": "text",
      "label": "Full Name",
      "value": "",
      "order": 0,
      "validators": {
        "required": true,
        "minLength": 2,
        "banWords": [
          "Test",
          "Dummy"
        ]
      }
    },
    "email": {
      "controlType": "input",
      "type": "email",
      "label": "Email",
      "value": "",
      "order": 1,
      "validators": {
        "email": true
      }
    },
    "role": {
      "controlType": "select",
      "label": "User Role",
      "value": "admin",
      "order": 2,
      "options": [
        {
          "label": "Admin",
          "value": "admin"
        },
        {
          "label": "Editor",
          "value": "editor"
        },
        {
          "label": "Guest",
          "value": "guest"
        }
      ]
    },
    "socialProfiles": {
      "controlType": "group",
      "label": "Links to Social Profiles",
      "order": 3,
      "activationConfig": {
        "controlPath": "role",
        "hasValue": "admin"
      },
      "controls": {
        "youtube": {
          "controlType": "input",
          "label": "YouTube",
          "value": "https://youtube.com/DecodedFrontend",
          "type": "text",
          "order": 0
        },
        "twitter": {
          "controlType": "input",
          "label": "Twitter",
          "value": null,
          "type": "text",
          "order": 1
        },
        "instagram": {
          "controlType": "input",
          "label": "Instagram",
          "value": null,
          "type": "text",
          "order": 2,
          "activationConfig": {
            "controlPath": "socialProfiles.youtube",
            "hasValue": "https://youtube.com/DecodedFrontend"
          }
        }
      }
    },
    "phoneNumbers": {
      "controlType": "array",
      "label": "Phone Numbers",
      "order": 4,
      "interactive": {
        "buttonText": "Add new Phone Number",
        "controlTemplate": {
          "controlType": "input",
          "label": "New Number",
          "value": null
        }
      },
      "controls": [
        {
          "controlType": "input",
          "label": "Phone Number",
          "value": null,
          "type": "text"
        }
      ]
    },
    "terms": {
      "controlType": "checkbox",
      "label": "Terms & Conditions were accepted",
      "value": false,
      "order": 4,
      "validators": {
        "requiredTrue": true
      }
    }
  }
}